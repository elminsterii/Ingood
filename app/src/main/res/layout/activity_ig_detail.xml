<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fff.ingood.ui.HeadZoomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/zoomViewIgActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".activity.IgActivityDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewIgActivityMain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_activity"/>

            <TextView
                android:id="@+id/textViewIgActivityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageViewIgActivityMain"
                android:textColorHighlight="@color/colorSlave"
                android:textSize="@dimen/text_size_ig_activity_title"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.fff.ingood.ui.HeadZoomScrollView>

    <include
        android:id="@+id/fabSetIgActivity"
        layout="@layout/fab_set_ig_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/zoomViewIgActivity"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.design.widget.CoordinatorLayout>