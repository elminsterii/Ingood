<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/login_margin_btw_img_and_top"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:src="@drawable/landingpage_logo" />
    <TextView
        android:layout_marginTop="@dimen/login_margin_btw_slogan_and_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:gravity="center"
        android:text="@string/login_slogan"/>



    <LinearLayout
        android:layout_marginTop="@dimen/login_margin_btw_slogan_and_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_signin"
                android:layout_marginStart="@dimen/login_margin_btns_btw_edge"
                android:layout_marginEnd="@dimen/login_margin_signin_btn_btw_register_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_btns_height"
                android:background="@drawable/selector_login_btn"
                android:layout_gravity="left"
                android:text="@string/sign_in" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_register"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="@dimen/login_margin_signin_btn_btw_register_btn"
                android:layout_marginEnd="@dimen/login_margin_btns_btw_edge"
                android:text="@string/sign_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_btns_height"
                android:layout_gravity="right"
                android:background="@drawable/selector_login_btn" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_facebook"
        android:layout_marginTop="15.5dp"
        android:layout_marginStart="@dimen/login_margin_btns_btw_edge"
        android:layout_marginEnd="@dimen/login_margin_btns_btw_edge"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btns_height"
        android:layout_gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/selector_login_btn"
        android:src="@drawable/facebook"/>
    <ImageButton
        android:id="@+id/btn_google"
        android:layout_marginTop="15.5dp"
        android:layout_marginStart="@dimen/login_margin_btns_btw_edge"
        android:layout_marginEnd="@dimen/login_margin_btns_btw_edge"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btns_height"
        android:layout_gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/selector_login_btn"
        android:src="@drawable/google"/>

</LinearLayout>
