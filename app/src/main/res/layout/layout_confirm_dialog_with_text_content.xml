<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@xml/igactivity_des_background">

    <TextView
        android:id="@+id/textViewTextContentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorSlave" />

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewTextContentTitle"
        android:textColor="@color/colorSlave"
        android:textSize="@dimen/text_size_ig_activity_description"
        android:inputType="textMultiLine"
        android:maxLength="500"
        tools:ignore="LabelFor" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnTextContentLeftBottom"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_register_next"
            android:textColor="@color/colorSlave"
            android:textSize="14sp"
            android:text="@string/dialog_cancel"/>

        <Button
            android:id="@+id/btnTextContentRightBottom"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_register_next"
            android:textColor="@color/colorSlave"
            android:textSize="14sp"
            android:text="@string/dialog_confirm"/>
    </RelativeLayout>
</RelativeLayout>
