<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@xml/igactivity_des_background">

        <TextView
            android:id="@+id/textViewTextContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/colorSlave" />

        <ImageView
            android:id="@+id/imageViewShowBitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewTextContentTitle"
            android:layout_marginTop="40dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewShowBitmap"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnTextContentRightBottom"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:background="@drawable/selector_register_next"
                android:textColor="@color/colorSlave"
                android:textSize="14sp"
                android:text="@string/dialog_confirm"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
