<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="IngoodTheme.StatusBarTransparent" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

    <style name="IngoodTheme.StatusBarSlaveColor" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorSlave</item>
    </style>

    <style name="IngoodTheme.StatusBarPrimaryColor" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>
