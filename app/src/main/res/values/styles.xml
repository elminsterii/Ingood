<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progress_bar_loading_circle">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_loading_circle_animation</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="IngoodEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorTextInput</item>
        <item name="colorControlNormal">@color/colorTextInput</item>
    </style>

    <style name="IngoodSpinnerStyle">
        <item name="colorControlNormal">@color/colorTextInput</item>
        <item name="colorAccent">@color/colorTextInput</item>
    </style>

</resources>
