<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dip" />
            <gradient android:angle="-90" android:startColor="@color/colorWhiteButtonPressed" android:endColor="@color/colorWhiteButtonPressed"  />
        </shape>
    </item>

    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <gradient android:angle="-90" android:startColor="@color/colorWhiteButton" android:endColor="@color/colorWhiteButton"  />
        </shape>
    </item>
</selector>